
/* 背景颜色 */
.bg-primary { background-color: var(--weui-INDIGO);}
.bg-secondary { background-color: var(--weui-BG-4);}
.bg-success { background-color: var(--weui-BRAND);}
.bg-danger { background-color: var(--weui-RED);}
.bg-warning { background-color: var(--weui-ORANGE);}
.bg-info { background-color: var(--weui-LINK);}
.bg-light { background-color: var(--weui-BG-0);}
.bg-dark { background-color: var(--weui-FG-0);}
.bg-white { background-color: #fff;}
